                            <input type="text" class="knob" value=@attain[2] data-skin="tron" data-thickness="0.2" data-width="100" data-height="100" width="20" data-fgColor="#FFFF00" data-readonly="true">

                            <div class="knob-label">@arrTemp[2]</div>
