
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    string name = ViewBag.Name + " 생산 현황";
    string labels = ViewBag.Labels;
    string data1 = ViewBag.Data1;
    string data2 = ViewBag.Data2;
    string data3 = ViewBag.Data3;

    string[] plan = data1.Split(',');
    string[] prd = data2.Split(',');
    string[] attain = data3.Split(',');
    string[] arrTemp = labels.Split(',');

    List<string> date = new List<string>();
    foreach (var item in arrTemp)
    {
        date.Add("'" + item + "'");
    }
}
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- AREA CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Area Chart</h3>

